<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_white"
    tools:context="in.lworks.washup.NavigationDrawerFragment">

    <RelativeLayout
        android:id="@+id/nav_header_container"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:layout_alignParentTop="true"
        android:background="@color/primaryColor"
        android:paddingTop="@dimen/app_bar_top_padding">

        <ImageView
            android:id="@+id/accout_image"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/nav_image_bottom_margin"
            android:layout_marginTop="@dimen/nav_image_top_margin"
            android:src="@drawable/ic_profile" />

        <LinearLayout
            android:id="@+id/account_details"
            android:layout_width="match_parent"
            android:layout_height="@dimen/subtitle_height"
            android:layout_below="@id/accout_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/customer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Saikiran Pulluri" />

            <TextView
                android:id="@+id/customer_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="psk.knr@gmail.com" />

            <TextView
                android:id="@+id/customer_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="+91-9030955263" />
        </LinearLayout>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/drawerList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nav_header_container">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
